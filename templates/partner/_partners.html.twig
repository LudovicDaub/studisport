{% for partner in partners %} {% for permission in partner.permissions %}

<tr class="align-middle">
  <td data-title="ID :">{{ partner.id }}</td>
  <td class="align-middle">
    <a
      class="form-check form-check-partner partner-name text-decoration-none card"
      href="{{ path('app_partner_edit', { id: partner.id }) }}"
    >
      {{ partner.name }}
    </a>
