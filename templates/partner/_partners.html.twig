      aria-label="Editer"
      href="{{ path('app_partner_edit', { id: partner.id }) }}"
    ></a>
    <a
      class="crud-button link-success fa fa-eye mx-2"
      href="{{ path('app_partner_show', { id: partner.id }) }}"
    ></a>
    <a
      class="crud-button link-danger fa fa-trash mx-2"
      data-bs-toggle="modal"
      data-bs-target="#deleteModal{{ partner.id }}"
    ></a>
  </td>
